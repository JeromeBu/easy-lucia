{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": ["ES2023"],
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "newLine": "LF",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "incremental": true,
    "strict": true,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"]
}
