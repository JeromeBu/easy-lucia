{
  "name": "easy-lucia",
  "version": "0.0.9",
  "description": "Login password classic setup with lucia, to avoid recoding the usecases each time. It only needs some config and email content to have an auth working.",
  "repository": {
    "type": "git",
    "url": "git://github.com/JeromeBu/easy-lucia.git"
  },
  "scripts": {
    "build": "rm -rf dist && pnpm build:cjs && pnpm build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "vitest",
    "migrate": "DATABASE_URL=postgres://user:pg_password@localhost:5432/db npx kysely-ctl migrate",
    "typecheck": "tsc --noEmit",
    "check:cmd": "biome check --no-errors-on-unmatched",
    "check:fix": "pnpm check:cmd --write .",
    "check": "pnpm check:cmd .",
    "fullcheck": "pnpm check:fix && pnpm typecheck && pnpm test"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/esm/*.js",
      "types": "./dist/*.d.ts"
    },
    "./tools": {
      "require": "./dist/tools/index.js",
      "import": "./dist/esm/tools/index.js",
      "types": "./dist/tools/index.d.ts"
    }
  },
  "author": "u/JeromeBu",
  "license": "MIT",
  "files": ["srcold/", "dist/", "!dist/tsconfig.tsbuildinfo"],
  "keywords": [],
  "homepage": "https://github.com/JeromeBu/easy-lucia",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/node": "^20.2.1",
    "@types/pg": "^8.11.6",
    "kysely": "^0.27.4",
    "kysely-ctl": "^0.9.0",
    "lefthook": "^1.7.2",
    "pg": "^8.12.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "lucia": "^3.2.0",
    "oslo": "^1.2.1"
  },
  "peerDependencies": {
    "kysely": "^0.27.4"
  }
}
